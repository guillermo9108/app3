{
  "expo": {
    "name": "StreamPay",
    "slug": "streampay3",
    "version": "2.1.0",
    "orientation": "default",
    "icon": "./assets/images/icon.png",
    "scheme": "streampay",
    "userInterfaceStyle": "dark",
    "backgroundColor": "#0f172a",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-image.png",
      "resizeMode": "contain",
      "backgroundColor": "#0f172a"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.streampay.app"
    },
    "android": {
      "package": "com.streampay.app",
      "versionCode": 7,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#0f172a"
      },
      "permissions": [
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "usesCleartextTraffic": true,
      "edgeToEdgeEnabled": true
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-image.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#0f172a"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "ff99e107-f144-4222-b3fa-d902c4f9f59f"
      }
    }
  }
}