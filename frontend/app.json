{
  "expo": {
    "name": "streampay3.1",
    "slug": "streampay2",
    "version": "3.1.1",
    "orientation": "default",
    "icon": "./assets/images/icon.png",
    "scheme": "frontend",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "package": "com.streampay.app",
      "edgeToEdgeEnabled": true,
      "usesCleartextTraffic": true,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "permissions": [
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "WRITE_EXTERNAL_STORAGE",
        "READ_EXTERNAL_STORAGE",
        "READ_MEDIA_VIDEO",
        "READ_MEDIA_AUDIO",
        "READ_MEDIA_IMAGES",
        "NOTIFICATIONS",
        "FOREGROUND_SERVICE",
        "DOWNLOAD_WITHOUT_NOTIFICATION"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-screen-orientation",
      [
        "expo-media-library",
        {
          "photosPermission": "Permitir que StreamPay guarde videos en tu galería.",
          "savePhotosPermission": "Permitir que StreamPay guarde videos en tu galería.",
          "isAccessMediaLocationEnabled": true
        }
      ],
      [
        "expo-notifications",
        {
          "sounds": []
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "a69a56d7-1d9c-419f-b699-799f04da7f5c"
      }
    }
  }
}